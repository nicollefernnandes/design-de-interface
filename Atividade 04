<script>
  var table = document.getElementById('interactiveTable');
  var cells = table.getElementsByTagName('td');

  for (var i = 0; i < cells.length; i++) {
    cells[i].addEventListener('click', function() {
      alert('Célula clicada: ' + this.innerHTML);
    });
  }
</script>

